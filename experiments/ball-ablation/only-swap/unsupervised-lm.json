{
  "dataset_reader": {
    "type": "shared_bt_reconstruction",
    "target_namespace": "tokens",
    "lazy": false,
    "noises": ["swap"]
  },
  "train_data_path": "data/vg/train-ball.tsv",
  "model": {
    "type": "copynet_shared_decoder",
    "source_embedder": {
      "type": "basic",
      "token_embedders": {
	"tokens": {
	  "type": "embedding",
	  "embedding_dim": 300
	}
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 300,
      "hidden_size": 250,
      "num_layers": 1,
      "batch_first": true,
      "bidirectional": true
    },
    "attention": {
      "type": "dot_product"
    },
    "beam_size": 1,
    "max_decoding_steps": 40,
    "dropout": 0.2,
    "source_namespace": "tokens",
    "target_namespace": "tokens"
  },
  "iterator": {
    "type": "homogeneous_batch",
    "batch_size": 10,
    "max_instances_in_memory": 800,
    "partition_key": "target_language"
  },
  "trainer": {
    "optimizer": {
      "type": "adam",
      "lr": 0.0001
    },
    "num_epochs": 1,
    "num_serialized_models_to_keep": 1,
    "cuda_device": 0,
    "shuffle": true
  },
  "vocabulary": {
    "directory_path": "vocabularies/vg-ball"
  }
}
